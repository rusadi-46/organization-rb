<div class="card">
	<div class="card-body">
		<h5 class="card-title">Person</h5>
		<div class="row">
			<div class="col-md-6 py-4">
				<form accept-charset="UTF-8" action="/person" method="get">
				  <input id="q" name="search" type="text" />
				  <input name="commit" type="submit" value="Search" />
				</form>
			</div>
			<div class="col-md-6 py-4" style="text-align: right">
				<%= link_to 'Add New',url_for(action: :new), method: :get, :class => "button btn btn-secondary" %>
			</div>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Avatar</th>
					<th scope="col">Name</th>
					<th scope="col">Email</th>
					<th scope="col">Phone</th>
					<th scope="col" class="text-center" width="15%" >Action</th>
				</tr>
		  	</thead>
		  	<tbody>
		  		<% @person.each_with_index do |data, index| %>   
					<tr>
					  	<th scope="row"><%= index + 1 %></th>
					  	<td><%= link_to "Avatar", rails_blob_path(data.avatar, disposition: "attachment") %></td> 
					  	<td><%= data.name %></td>
					  	<td><%= data.email %></td>
					  	<td><%= data.phone %></td>
					  	<td>
					  		<%= link_to "Edit", edit_person_path(data), :class => "button btn btn-primary" %>
					  		<%= link_to 'Delete', person_path(data), :class => "button btn btn-danger", method: :delete, data: {confirm: 'Are you sure?' }%>
			  			</td>
					</tr>
				<% end %>   
		  </tbody>
		</table>
	</div>
</div>
