<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row g-3">
    <% if current_user %>
      <div class="col-md-12">
    <% else %>
      <div class="col-md-6">
    <% end %>
      <%= form.label :name, :class => 'form-label'  %>
      <%= form.text_field :name, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= form.label :email, :class => 'form-label'  %>
      <%= form.text_field :email, :class => 'form-control' %>
    </div>
    <% if current_user %>
      <div class="col-md-6">
        <%= form.label :status, :class => 'form-label'  %>
        <%= form.select :status, [["Admin", "Admin"], ["Account Manager", "Account Manager"]], {}, {class: "form-select"} %>
      </div>
    <% else %>
      <%= form.hidden_field :status, value: "Admin" %>
    <% end %>

    <div class="col-md-6">
      <%= form.label :password, :class => 'form-label' %>
      <%= form.password_field :password, :class => 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= form.label :password_confirmation, :class => 'form-label'%>
      <%= form.password_field :password_confirmation, :class => 'form-control'%>
    </div>
  </div>
  <div class="actions py-4">
    <%= form.submit :class => "button btn btn-primary"%>
    <%= link_to 'Back', users_path, :class => "Button btn btn-secondary" %>
  </div>
<% end %>
