<div class="card">
  	<div class="card-body">
    	<h5 class="card-title py-4">Detail Organization</h5>
	    <form class="row g-3" accept-charset="UTF-8" action="#">
	    	<div class="col-md-6">
	        	<label class="form-label">Acount Manager</label>
	        	<input type="text" class="form-control-plaintext fw-bolder" value="<%= @organization.user.name %>">
	      	</div>	
	      	<div class="col-md-6">
	        	<label class="form-label">Name</label>
	        	<input type="text" class="form-control-plaintext fw-bolder" value="<%= @organization.name %>">
	      	</div>
	      	<div class="col-md-6">
	        	<label class="form-label">Phone</label>
	        	<input type="test" class="form-control-plaintext fw-bolder" value="<%= @organization.phone %>">
	      	</div>
	      	<div class="col-md-6">
	        	<label class="form-label">Email</label>
	        	<input type="email" class="form-control-plaintext fw-bolder" value="<%= @organization.email %>">
	      	</div>
	      	<div class="col-md-6">
	        	<label class="form-label">Website</label>
	        	<input type="text" class="form-control-plaintext fw-bolder" value="<%= @organization.website %>">
	      	</div>
	      	<div class="col-md-6">
	        	<label for="formFile" class="form-label">Logo</label> <br>
	        	<%= link_to "Logo", rails_blob_path(@organization.logo, disposition: "attachment") %>
	      	</div>
	      	<hr>
	      	<div class="col-md-12">
	        	<label for="formFile" class="form-label">List Person <%= @organization.name %> : </label>
	      	</div>
	      	<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Avatar</th>
						<th scope="col">Name</th>
						<th scope="col">Email</th>
						<th scope="col">Phone</th>
					</tr>
			  	</thead>
			  	<tbody>
			  		<% @organization.person.each do |data| %>   
						<tr>
						  	<th scope="row">1</th>
						  	<td><%= link_to "Avatar", rails_blob_path(data.avatar, disposition: "attachment") %></td> 
						  	<td><%= data.name %></td>
						  	<td><%= data.email %></td>
						  	<td><%= data.phone %></td>
						</tr>
					<% end %>   
			  </tbody>
			</table>
			<div class="col-md-6">
				<%= link_to "Back", organization_index_url, :class => "button btn btn-primary" %>
			</div>
	    </form>
  	</div>
</div>
