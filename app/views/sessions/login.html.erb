
<form class="form-signin" class="form-signin" accept-charset="UTF-8" action="/login" method="post">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  	<div class="text-center mb-4">
    	<img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    	<h1 class="h3 mb-3 font-weight-normal">PRINTEROUS</h1>
  	</div>

 	<div class="form-label-group">
	    <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" required autofocus>
	    <label for="inputEmail">Email address</label>
	</div>

  	<div class="form-label-group">
    	<input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
    	<label for="inputPassword">Password</label>
  	</div>

	<div class="row">
	  	<div class="checkbox mb-3 col-md-6">
	    	<label>
	      		<input type="checkbox" value="remember-me"> Remember me
	    	</label>
	  	</div>
	  	<div class="mb-3 col-md-6" style="text-align: right;">
    		<a href="/users/new">Sign up</a>
	  	</div>
	</div>
  	<div class="d-grid gap-2">
	  	<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  	</div>
  	<p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
</form>